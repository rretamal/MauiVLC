<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiVlc.Controls"
             x:Class="MauiVlc.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <controls:MediaViewer x:Name="videoViewer" WidthRequest="300" HeightRequest="300" HorizontalOptions="CenterAndExpand" VideoUrl="{Binding VideoUrl}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
